{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "Films API",
		"description": "CRUD API for managing films"
	},
	"host": "localhost:3000",
	"basePath": "/api",
	"schemes": ["http"],
	"consumes": ["application/json"],
	"produces": ["application/json"],
	"paths": {
		"/films": {
			"get": {
				"summary": "Get all films",
				"tags": ["Films"],
				"responses": {
					"200": {
						"description": "List of films",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Film"
							}
						}
					}
				}
			},
			"post": {
				"summary": "Create a new film",
				"tags": ["Films"],
				"parameters": [
					{
						"in": "body",
						"name": "film",
						"required": true,
						"schema": {
							"$ref": "#/definitions/FilmInput"
						}
					}
				],
				"responses": {
					"201": {
						"description": "Film created",
						"schema": {
							"$ref": "#/definitions/Film"
						}
					}
				}
			}
		},
		"/films/{id}": {
			"get": {
				"summary": "Get a film by ID",
				"tags": ["Films"],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"type": "integer"
					}
				],
				"responses": {
					"200": {
						"description": "Film found",
						"schema": {
							"$ref": "#/definitions/Film"
						}
					},
					"404": {
						"description": "Film not found"
					}
				}
			},
			"patch": {
				"summary": "Update a film",
				"tags": ["Films"],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"type": "integer"
					},
					{
						"in": "body",
						"name": "film",
						"required": true,
						"schema": {
							"$ref": "#/definitions/FilmInput"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Film updated",
						"schema": {
							"$ref": "#/definitions/Film"
						}
					},
					"404": {
						"description": "Film not found"
					}
				}
			},
			"delete": {
				"summary": "Delete a film",
				"tags": ["Films"],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"type": "integer"
					}
				],
				"responses": {
					"204": {
						"description": "Film deleted"
					},
					"404": {
						"description": "Film not found"
					}
				}
			}
		}
	},
	"definitions": {
		"Film": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer",
					"example": 265
				},
				"titre": {
					"type": "string",
					"example": "Inception"
				},
				"annee_sortie": {
					"type": "integer",
					"example": 2000
				},
				"duree_minutes": {
					"type": "integer",
					"example": 120
				}
			}
		},
		"FilmInput": {
			"type": "object",
			"required": ["titre", "annee_sortie", "duree_minutes"],
			"properties": {
				"titre": {
					"type": "string"
				},
				"annee_sortie": {
					"type": "integer"
				},
				"duree_minutes": {
					"type": "integer"
				}
			}
		}
	},
	"tags": [
		{
			"name": "Cinema",
			"description": "Film management endpoints"
		}
	]
}
